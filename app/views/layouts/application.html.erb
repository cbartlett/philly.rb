<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>Philly on Rails: Philadelphia area Ruby user group</title>
<%= stylesheet_link_tag 'default' %>
</head>
<body id="<%= action_body_id %>">
<div id="wrapper">
	<div id="header">
		<div id="logo">
			<h1><a href="#">Philly on Rails</a></h1>
			<h2><a href="http://www.freecsstemplates.org/">Philadelphia Ruby user group</a></h2>
		</div>
		<!-- end div#logo -->
		<div id="menu">
			<ul>
				<li id="home_button"><%= link_to 'Home', '/' %></li>
				<li id="events_button"><%= link_to 'Events', events_path %></li>
				<li id="resources_button"><%= link_to 'Resources', :controller => 'page', :action => 'resources' %></li>
				<li id="jobs_button"><%= link_to 'Jobs', :controller => 'page', :action => 'jobs' %></li>
			</ul>
		</div>
		<!-- end div#menu -->
	</div>
	<!-- end div#header -->
	<div id="page">
		<div id="content">
			<%= yield %>
		</div>
		<!-- end div#content -->
		<div id="sidebar">
			<ul>
				<li id="news">
					<% @categories.each do |category| %>
					<h2>Next <%= category.name %>:</h2>
					<ul>
						<li>
							<% if category.upcoming_event %>
								<h3><%= category.upcoming_event.starts_at %></h3>
								<p><%= link_to(category.upcoming_event.name, event_path(category.upcoming_event)) %></p>
							<% else %>
								<p><em>None scheduled.</em></p>
							<% end %>
						</li>					
					</ul>
					<% end %>
				</li>
				<li id="submenu">
					<h2>Helpful Links</h2>
					<ul>
						<li><a href="http://www.ruby-lang.org">Ruby</a></li>
						<li><a href="http://www.rubyonrails.org">Ruby on Rails</a></li>
						<li><a href="http://api.rubyonrails.org">Rails API Documentation</a></li>
					</ul>
				</li>
			</ul>
		</div>
		<!-- end div#sidebar -->
		<div style="clear: both; height: 1px"></div>
	</div>
	<!-- end div#page -->
	<div id="footer">
		<p id="legal">Copyright &copy; <%= Time.now.year %> Philly on Rails. All Rights Reserved. Design from <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>.</p>
	</div>
	<!-- end div#footer -->
</div>
<!-- end div#wrapper -->
</body>
</html>
