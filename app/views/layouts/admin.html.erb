		<li><%= link_to 'New Category', new_admin_event_category_path %></li>
		<li><%= link_to 'List Categories', admin_event_categories_path %></li>
  </ul>

</div>

<div class="mainContent">
<h1><%= @page_title %></h1>
<p style="color: green"><%= flash[:notice] %></p>

<%= yield %>

</div>

</body>
