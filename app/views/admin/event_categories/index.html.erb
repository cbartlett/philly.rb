<% @page_title = 'Listing Event Categories' %>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for event_category in @event_categories %>
  <tr>
    <td><%=h event_category.name %></td>
    <td><%= link_to 'Show', admin_event_category_path(event_category) %></td>
    <td><%= link_to 'Edit', edit_admin_event_category_path(event_category) %></td>
    <td><%= link_to 'Destroy', admin_event_category_path(event_category), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event Category', new_admin_event_category_path %>
