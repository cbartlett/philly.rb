<% @page_title = 'Edit Event Category' %>

<% form_for([:admin, @event_category]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', admin_event_category_path(@event_category) %> |
<%= link_to 'Back', admin_event_categories_path %>
