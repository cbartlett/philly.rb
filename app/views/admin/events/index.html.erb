<% @page_title = 'Listing Events' %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Location</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th>Event category</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.name %></td>
    <td><%=h event.description %></td>
    <td><%=h event.location_id %></td>
    <td><%=h event.starts_at %></td>
    <td><%=h event.ends_at %></td>
    <td><%=h event.event_category_id %></td>
    <td><%= link_to 'Show', admin_event_path(event) %></td>
    <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
    <td><%= link_to 'Destroy', admin_event_path(event), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New event', new_admin_event_path %>
